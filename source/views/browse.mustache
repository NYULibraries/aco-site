<!doctype html>
<html>
<head>{{> head }}</head>
<body data-app="{{ appUrl }}" data-appRoot="{{ appRoot }}" class="{{ bodyClass }}">
  {{> header }}
  <main class="main container-fluid" role="main">
    <header>
      {{#title}}
        <h2  class="page-title" lang="{{language_code}}" dir="{{language_dir}}">{{{html}}}</h2>
      {{/title}}
      <select id="browse-select">
        <option data-sort-dir="asc" value="ss_longlabel" selected> Title in English / انجليزي نجليزينجليزي</option>
        <option data-sort-dir="asc" value="ss_ar_title">Title in Arabic / عربي</option>
        <option data-sort-dir="asc" value="ss_sauthor">Author / المؤلف</option>
      </select>
      <div class="resultsnum">Showing results <span class="start"></span> - <span class="docslength"></span> of <span class="numfound"></span></div>
    </header>
    {{#content}}
      {{#items}}
        <div 
          class="widget" 
          data-name="items" 
          data-rows="{{ rows }}"
          data-source="{{ source }}"
          data-fl="{{ fl }}"
          {{#fq}}
          data-fq-{{ filter }}="{{ value }}"
          {{/fq}}
          data-script='{ "js" : [ "browse.min.js" ], "hbs" : [ { "template" : "items.hbs", "id" : "items" } ] }'
        ></div>
        <div class="text-center">
          <div id="paginator" class="pagination"></div>
        </div>        
      {{/items}}
    {{/content}}
  </main>
  {{> footer }}
  {{{ closure }}}
</body>
</html>