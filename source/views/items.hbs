<div class="item-list">
  {{#items}}
  <div class="item">
    <div class="l-hold">
      <div class="thumbs">
        <a href="{{appRoot}}/book/{{identifier}}"><img class="img-responsive" src="{{ss_representative_image}}" alt="" title="{{sm_field_title}}"/></a>
      </div>
      <div lang="en">
        <div><span class="md_label">Title:</span> <a href="{{appRoot}}/book/{{ss_identifer}}">{{sm_field_title}}</a></div>        
        <div><span class="md_label">Author:</span> {{#each sm_author}}<span>{{this}}</span>{{/each}}</div>                        
        <div><span class="md_label">Publisher:</span> {{#each sm_publisher}}<span>{{this}}</span>{{/each}}</div>                        
        <div><span class="md_label">Date of publication:</span> {{ss_pubdate}}</div>                        
        <div><span class="md_label">Subject:</span> {{#each im_field_subject}}{{{subject this}}}{{/each}}</div>
        <div><span class="md_label">Provider:</span> {{#each sm_partners}}<span>{{this}}</span>{{/each}}</div>                        
      </div>
    </div>
    <div dir="rtl" lang="ar">
      <div dir="rtl" lang="ar"><span class="md_label">العنوان:</span> <a href="{{appRoot}}/book/{{ss_identifer}}">{{sm_ar_title}}</a></div>
      <div dir="rtl" lang="ar"><span class="md_label">المؤلف:</span> {{sm_ar_author}}</div>                        
      <div dir="rtl" lang="ar"><span class="md_label">الناشر:</span> {{sm_ar_publisher}}</div>                        
      <div dir="rtl" lang="ar"><span class="md_label">تاريخ النشر:</span> {{sm_ar_publication_date}}</div>                        
      <div dir="rtl" lang="ar"><span class="md_label">الموضوع:</span> {{#each im_field_subject}}{{{subject this}}}{{/each}}</div>
      <div dir="rtl" lang="ar"><span class="md_label">شريك:</span> {{#each sm_ar_partners}}<span>{{this}}</span>{{/each}}</div>  
    </div>                      
  </div>
  {{/items}}
</div>